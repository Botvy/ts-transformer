{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist/",
        "rootDir": "./src/",
        "lib": [
            "ES2016",
            "DOM"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "transform": "./src/transformer.ts"
            }
        ]
    }
}
